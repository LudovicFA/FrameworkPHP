{% extends '@admin/layout.twig' %}
{% block title %}
Editer les articles
{% endblock %}
{% block body %}

  {{ paginate(items, 'blog.admin.index') }}

  <p class="text-right">
    <a href="{{ path('blog.admin.create') }}" class="btn btn-primary">Ajouter un article</a>
  </p>

  <table class="table table-stripped">
    <thead>
      <tr>
        <td>Titre</td>
        <td>Actions</td>
      </tr>
    </thead>
    <tbody>
      {% for item in items %}
      <tr>
        <td>{{ item.name }}</td>
        <td>
          <a href="{{ path('blog.admin.edit', {id : item.id} ) }}" class="btn btn-primary">Editer</a>
          <form style="display: inline" action="{{ path( 'blog.admin.delete', {id: item.id} ) }}" method="post" onsubmit="return confirm('Etes vous sur?')">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-danger">Supprimer</button>
          </form>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}
